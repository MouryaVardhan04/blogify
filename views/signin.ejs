<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./partials/head") %>
    <%- include("./partials/nav_style") %>

    <title>Sign In</title>
    <script
    src="https://kit.fontawesome.com/97ebdf5864.js"
    crossorigin="anonymous"
  ></script>
  <%- include("./partials/signin_style") %>
  <%- include("./partials/footer_style") %>

  </head>
  <body>
    <%- include("./partials/nav") %>
    <div class="box">
      <div class="box2">
        <div class="container">
          <h2>Sign In</h2>
          <form action="/user/signin" method="POST">
            <div class="form-group">
              <input
                type="email"
                class="form-control"
                id="email"
                name="email"
                placeholder=" "
                required  
              />
              <label for="email">Email</label>
              <i class="fa-solid fa-envelope"></i>
            </div>
            <div class="form-group">
              <input
                type="password"
                class="form-control"
                id="password"
                name="password"
                placeholder=" "
                required
              />
              <label for="password">Password</label>
              <i class="fa-solid fa-lock"></i>
            </div>
            <% if (locals.error) { %>
            <div class="error"><%= locals.error %></div>
            <% } %>
            <button type="submit" id="btn">Sign In</button>
            <p>Don't have an account? <a href="/user/signup">Register</a></p>
          </form>
        </div>
      </div>
    </div>
    <%- include("./partials/script") %>
  </body>
<%- include("./footer") %>

</html>
