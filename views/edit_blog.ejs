<!DOCTYPE html>
<html lang="en">
<head>
  <%- include("./partials/head") %>
  
  <title>Edit Blog</title>
  <%- include("./partials/nav_style") %>
  <script src="https://kit.fontawesome.com/97ebdf5864.js" crossorigin="anonymous"></script>
  <%- include("./partials/edit_blog_style") %>
  <%- include("./partials/footer_style") %>
  
</head>

<body>
  <%- include("./partials/nav") %>
  <div class="box">
    <div class="box2">
      <div class="container">
        <h2>EDIT YOUR BLOG</h2>
        <form action="/edit/<%=blog._id%>" method="POST" enctype="multipart/form-data">
          <div class="form-group">
            <input type="text"
              class="form-control"
              id="title"
              name="title"
              value="<%= blog.title %>"
              aria-describedby="title"
              required />
            <label for="title">TITLE</label>
            <i class="fa-solid fa-heading"></i>
          </div>
          <div class="form-group">
            <textarea
              placeholder="Describe about your blog"
              id="description"
              name="description"
              required
              rows="4"
              style="height: 100px"
            ><%= blog.description %></textarea>
          </div>
          <div class="form-group">
            <textarea
              placeholder="Start writing about your blog"
              id="body"
              name="body"
              rows="10"
            ><%= blog.body %></textarea>
          </div>
          <div class="coverImage">
            <label for="coverImage">Cover Image</label>
            <i class="fa-solid fa-image"></i>
            <br />
            <input type="file"
              class="form-control"
              id="coverImage"
              name="coverImage"
              aria-describedby="coverImage"
              placeholder=""
              style="width: 30vh;" />
          </div>
          <input type="submit" value="SAVE" id="btn" />
        </form>
        <div class="delete">
        <form action="/blog/delete/<%= blog._id %>" method="POST" style="display: inline;">
          <button type="submit" onclick="return confirm('Are you sure you want to delete this blog?')">DELETE <i class="fa-solid fa-trash"></i></button>
        </form>
      </div>
      </div>
    </div>
  </div>

  <%- include("./partials/script") %>

</body>
<%- include("./footer") %>
</html>
